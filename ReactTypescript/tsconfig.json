{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "mapRoot":"mapFiles", 
    "sourceMap": true,
    "sourceRoot": "mapFiles",
    "outDir": "js",
    "skipDefaultLibCheck": true
  },
  "exclude": [
      "node_modules",
      "typings"
  ]
}
